{
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended", "standard"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "space-before-function-paren": ["off"],
      "semi": ["error", "never"],
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
    }
  }
  